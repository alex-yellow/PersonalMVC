@model IEnumerable<PersonalMvc.Models.Personal>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}

<h1>Справочник персонала</h1>
@using (Html.BeginForm("Index", "Personal", FormMethod.Get))
{
<p>
    Отдел: @Html.DropDownList("department", "Все")
    Сотрудник: @Html.TextBox("searchstring")
    <input type="submit" value="Фильтр" />
</p>
}
<div>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Profession.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Department.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Profession.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                    @Html.ActionLink("Редактировать", "Edit", new { id=item.Id})
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
@Html.ActionLink("Главная","Index")

